<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="introTextStyle">
        <item name="fontFamily">BrownPro-Regular</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#4C4D4F</item>
    </style>

    <style name="getStartedStyle" parent="introTextStyle">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="keepInTouchStyle" parent="introTextStyle">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="signInOrRegisterStyle" parent="introTextStyle">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#9B9B9B</item>
    </style>

    <style name="signInButtonStyle" parent="introTextStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="textAppearanceButton">@style/signInButtonStyle</item>
        <item name="backgroundColor">@color/colorBackground</item>
    </style>

    <style name="dp15" parent="getStartedStyle">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="dp14" parent="getStartedStyle">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="errorTextStyle" parent="getStartedStyle">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#AF4830</item>
    </style>

    <style name="dp17White" parent="dp15">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="dp15White" parent="dp15">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="regStyle" parent="AppTheme">
        <item name="android:textAppearance">@style/dp15</item>
    </style>

    <style name="dp15Pink" parent="dp15">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>